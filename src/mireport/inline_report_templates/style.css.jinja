body {
    background: #ccc;
    margin: 0;
    padding: 20px;
    font-family: Arial, sans-serif;
}

h1, h2 {
    margin-top: 0;
}

/* Definition List Styling */
dl {
    margin: 0;
}

dt {
    margin-top: 1em;
}

dd {
    margin-left: 0;
    margin-bottom: 0.5em;
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    margin: 1em 0;
    font-size: 1em;
    color: #333;
}

th,
td {
    padding: 8px;
    text-align: left;
    vertical-align: top;
    border: 1px solid #ddd;
    background-color: #fff;
    font-weight: normal;
}

@media print {
  /* Define global page settings */
  @page portrait {
    size: A4 portrait;
  }

  /* Override landscape pages */
  @page landscape {
    size: A4 landscape;
  }

  /* Ensure portrait and landscape pages match */
  .portrait-page {
    page: portrait;
  }

  .landscape-page {
    page: landscape;
  }

  /* Ensure no margins, padding, or shadows on print */
  body {
    margin: 0;
    padding: 0;
    background: white;
  }

  .page {
    page-break-after: always; /* Force page breaks */
    page-break-inside: auto;
    box-shadow: none;
    margin: 0;
    padding: 0;
    width: 100%;
    height: auto;
  }

  .toc-list,
  .fact-list {
    page-break-inside: auto;
  }

  .toc-list li,
  .fact,
  .thematic-table tbody tr {
    page-break-inside: avoid;
  }

  /* Optional: hide screen-only elements */
  .no-print {
    display: none;
  }

}


